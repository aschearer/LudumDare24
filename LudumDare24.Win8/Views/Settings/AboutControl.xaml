<UserControl
    x:Class="LudumDare24.Win8.Views.Settings.AboutControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="768"
    d:DesignWidth="346">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="256" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Grid.Column="1" Source="/Assets/Images/Settings/SpottedZebraLogo.png" />
        <StackPanel Grid.Column="1" 
                    Grid.Row="2"
                    VerticalAlignment="Bottom"
                    Margin="30 0 30 0">
            <TextBlock Style="{StaticResource BodyTextStyle}" Foreground="Black" Margin="0 0 0 10">Spotted Zebra makes games for Windows 8.</TextBlock>
            <HyperlinkButton Click="LearnMoreClicked">Learn More</HyperlinkButton>
        </StackPanel>
    </Grid>
</UserControl>
